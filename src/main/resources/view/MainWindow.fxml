<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox stylesheets="@../css/light.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Файл">
            <items>
              <MenuItem mnemonicParsing="false" text="Новый" />
                  <MenuItem mnemonicParsing="false" text="Загрузить" />
                  <MenuItem mnemonicParsing="false" text="Сохранить" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="Выход" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Инструменты">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#runDiffusionCalculator" text="Калькулятор поперечной диффузии" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Помощь">
            <items>
              <MenuItem mnemonicParsing="false" text="О программе" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" pannable="true">
         <content>
            <VBox>
               <children>
                  <TitledPane text="Данные о реке">
                     <content>
                        <TilePane hgap="5.0" prefColumns="3" tileAlignment="TOP_LEFT" vgap="5.0">
                           <children>
                              <VBox>
                                 <children>
                                    <Label text="LB - Средняя ширина" />
                                    <TextField fx:id="textFieldRiverWidth" />
                                 </children>
                              </VBox>
                              <VBox>
                                 <children>
                                    <Label text="LH - Средняя глубина" />
                                    <TextField fx:id="textFieldRiverDepth" />
                                 </children>
                              </VBox>
                              <VBox>
                                 <children>
                                    <Label text="VS - Сред. скорость течения" />
                                    <TextField fx:id="textFieldFlowSpeed" />
                                 </children>
                              </VBox>
                              <VBox>
                                 <children>
                                    <Label styleClass="textWithTooltip" stylesheets="@../css/light.css" text="DY - Диффузия">
                                       <tooltip>
                                          <Tooltip text=" Коэффициент поперечной диффузии" />
                                       </tooltip>
                                    </Label>
                                    <TextField fx:id="textFieldDiffusionCoef" />
                                 </children>
                              </VBox>
                              <VBox>
                                 <children>
                                    <Label styleClass="textWithTooltip" stylesheets="@../css/light.css" text="K1 - Неконсервативность">
                                       <tooltip>
                                          <Tooltip text="Коэффициент неконсервативности" />
                                       </tooltip>
                                    </Label>
                                    <TextField fx:id="textFieldNonConservatismCoef" />
                                 </children>
                              </VBox>
                              <VBox />
                           </children>
                        </TilePane>
                     </content>
                  </TitledPane>
                  <TitledPane text="Вещества">
                     <content>
                        <TilePane hgap="5.0" prefColumns="3" vgap="5.0">
                           <children>
                              <VBox>
                                 <children>
                                    <Label text="Наименование" />
                                    <TextField fx:id="textFieldSubstance" />
                                 </children>
                              </VBox>
                              <VBox>
                                 <children>
                                    <Label text="Доля в ЛПВ" />
                                    <TextField fx:id="textFieldProportion" />
                                 </children>
                              </VBox>
                              <VBox>
                                 <children>
                                    <Label text="Значение CPDK" />
                                    <TextField fx:id="textFieldLAC" />
                                 </children>
                              </VBox>
                              <VBox>
                                 <children>
                                    <Label styleClass="textWithTooltip" text="Фоновая концентрация">
                                       <tooltip>
                                          <Tooltip text="Фоновая концентрация в точках выпуска" />
                                       </tooltip>
                                    </Label>
                                    <TextField fx:id="textFieldConcentration" />
                                 </children>
                              </VBox>
                              <VBox>
                                 <children>
                                    <Label text="Кол-во створов выпуска" />
                                    <TextField fx:id="textFieldNumberOfPipes" />
                                 </children>
                              </VBox>
                              <VBox>
                                 <children>
                                    <Label styleClass="textWithTooltip" text="Округление">
                                       <tooltip>
                                          <Tooltip text="Количество цифр после запятой {0, 1, 2, 3 ...}" />
                                       </tooltip>
                                    </Label>
                                    <TextField fx:id="textFieldOccuracy" />
                                 </children>
                              </VBox>
                           </children>
                        </TilePane>
                     </content>
                  </TitledPane>
                  <BorderPane styleClass="borderpane">
                     <center>
                        <Label text="Выпуска">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </center>
                  </BorderPane>
                  <Accordion fx:id="accordionPlant" />
                  <AnchorPane>
                     <children>
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#addTitledPanePipe" text="+" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                           <tooltip>
                              <Tooltip text="Добавить выпуск" />
                           </tooltip>
                        </Button>
                     </children>
                  </AnchorPane>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</VBox>
